<div id="countryshow"> <!-- KEEP ME HERE -->
  <% if @countryname %>
    <div class="countryname"> <%= @countryname %> </div>
  <% end %>
  <div class="row">
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3>Time & Weather</h3>
        </div>
        <div class="panel-body">
          <% c = TZInfo::Country.get(@country) %>
          <% czone = c.zone_identifiers.first %>
          <% Time.zone = czone %>
          <%= Time.zone.now.strftime("%I:%M%p") %> on 
          <%= Time.zone.now.strftime("%B %d, %Y") %>
          <br/>
          <strong>Temp: </strong>
          <% if @weather %>
            <%= @weather.condition.temp %> <%= @weather.units.temperature %>
          <br/>
          <strong>Conditions: </strong>
          <%= @weather.condition.code('string') %>
          <% else %>
            Weather not available
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3>News</h3>
        </div>
        <div class="panel-body">
          fucking news
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3>Events</h3>
        </div>
        <div class="panel-body">
          events list goes here
        </div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3>Currency rates</h3>
        </div>
        <div class="panel-body">
          rates go here
        </div>
      </div>
    </div>
  </div>
</div> <!-- KEEP ME HERE -->